rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colecci칩n de leads de preventa
    match /preventa_leads/{leadId} {
      // Permitir lectura y escritura solo a usuarios autenticados del backend
      allow read, write: if request.auth != null && 
        request.auth.token.email == resource.data.email;
      
      // Permitir creaci칩n de nuevos leads (sin autenticaci칩n para el formulario)
      allow create: if true;
    }
    
    // Reglas m치s restrictivas para otras colecciones
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
